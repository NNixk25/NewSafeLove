@page "/"
@using MauiApp1.Models

<div class="page-wrapper">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold title">ยินดีต้อนรับสู่ SafeLove</h1>
        <p class="subtitle">เรียนรู้และป้องกันโรคติดต่อทางเพศสัมพันธ์ เพื่อสุขภาพที่ปลอดภัย</p>
    </div>

    <!-- Menu Cards -->
    <div class="container">
        <div class="row g-4 justify-content-center">

            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="emoji">ℹ️</div>
                    <h5 class="fw-bold">ข้อมูลพื้นฐาน</h5>
                    <p class="text-muted">เรียนรู้เกี่ยวกับโรคติดต่อทางเพศสัมพันธ์เบื้องต้น</p>
                    <a href="/basic" class="btn-submit">อ่านเพิ่มเติม</a>
                </div>
            </div>

            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="emoji">🦠</div>
                    <h5 class="fw-bold">โรคต่าง ๆ</h5>
                    <p class="text-muted">รายละเอียดโรค สาเหตุ อาการ และวิธีรักษา</p>
                    <a href="/diseases" class="btn-submit">ดูโรคทั้งหมด</a>
                </div>
            </div>

            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="emoji">📝</div>
                    <h5 class="fw-bold">แบบทดสอบ</h5>
                    <p class="text-muted">ตรวจสอบความรู้เรื่องโรคติดต่อ</p>
                    <a href="/disease-quiz" class="btn-submit">เริ่มทำ</a>
                </div>
            </div>

            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="emoji">🔍</div>
                    <h5 class="fw-bold">ตรวจเช็ค</h5>
                    <p class="text-muted">ประเมินความเสี่ยงของคุณ</p>
                    <a href="/self-check" class="btn-submit">ตรวจสอบ</a>
                </div>
            </div>

            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center">
                    <div class="emoji">🗺️</div>
                    <h5 class="fw-bold">แผนที่</h5>
                    <p class="text-muted">สถานที่ให้บริการ</p>
                    <a href="/map" class="btn-submit">กดเลย</a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .title {
        font-size: 2.2rem;
        margin-bottom: 10px;
        color: #e83e8c;
    }
    .subtitle {
        color: #666;
        font-size: 1.1rem;
    }
    .banner-img {
        max-width: 250px;
        border-radius: 20px;
        box-shadow: 0 6px 16px rgba(0,0,0,0.15);
    }
    .card {
        background: #fff;
        border-radius: 18px;
        padding: 25px 20px;
        border: 1px solid #f1f1f1;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }
    .card h5 {
        margin-top: 12px;
        margin-bottom: 8px;
        color: #333;
    }
    .card .emoji {
        font-size: 2rem;
        margin-bottom: 10px;
    }
    .text-muted {
        font-size: 0.95rem;
        color: #777 !important;
    }
    .btn-submit {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 0;
        width: 100%;
        background: #ff4da6;
        border: none;
        border-radius: 10px;
        color: #fff !important;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: background 0.3s ease;
        text-decoration: none;
    }
    .btn-submit:hover {
        background: #e63399;
    }
</style>
