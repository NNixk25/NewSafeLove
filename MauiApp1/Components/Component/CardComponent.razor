@using MauiApp1.Models

@if (Items is not null)
{
    foreach (var pair in Items.Select((d, i) => new { d, i }))
    {
        var d = pair.d;
        var index = pair.i;
        DiseaseDescriptions? desc = (index >= 0 && index < _diseasesDescriptions.Count) ? _diseasesDescriptions[index] : null;
        var modalId = $"disease-modal-{index}";

        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="emoji">🌸</div>
                    <h5 class="card-title fw-bold">@d.Name</h5>
                    <p class="card-text text-muted flex-grow-1">อาการ: @d.Symptom</p>
                    <ButtonModelComponent ModalId="@modalId" Title="@d.Name" Item="@desc" />
                </div>
            </div>
        </div>
    }
}
